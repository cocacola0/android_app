<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fg_clienti">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/fg_of_btn_trimite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/selecteaza_client"
                android:theme="@style/TextViewGetText"
                android:textAlignment="center"/>

            <Spinner
                android:id="@+id/fg_of_sp_clienti"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <ListView
            android:id="@+id/fg_of_list_clienti"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/selecteaza_produs"
                android:theme="@style/TextViewGetText"
                android:textAlignment="center"/>

            <Spinner
                android:id="@+id/fg_of_sp_produse"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ListView
            android:id="@+id/fg_of_list_produse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>


    <Button
        android:id="@+id/fg_of_btn_trimite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trimite_oferta"
        style="@style/BigButton"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>